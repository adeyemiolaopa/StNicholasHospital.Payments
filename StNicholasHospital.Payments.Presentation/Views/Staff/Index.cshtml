@model IEnumerable<StNicholasHospital.Payments.Domain.Dto.StaffDto>

@{
    ViewBag.Title = "Index";
    Layout = "_StaffLayout.cshtml";
}

<h2>A list of staff members</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Staff ID
        </th>
        <th>
            Firstname
        </th>
        <th>
            Lastname
        </th>
        <th>
            Staff No
        </th>
        <th>
            Entry Date
        </th>
        <th>
            Created By
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StaffID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Firstname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lastname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StaffNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EntryDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedBy)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.StaffNo }) |
                @Html.ActionLink("Details", "Details", new { id = item.StaffNo }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.StaffNo })
            </td>
        </tr>
    }

</table>
